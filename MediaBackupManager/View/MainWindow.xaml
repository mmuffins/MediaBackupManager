<Window x:Class="MediaBackupManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBackupManager.View"
        xmlns:viewmodel="clr-namespace:MediaBackupManager.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="1200" 
        Closed="Window_Closed">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:DirectoryBrowserViewModel}">
            <local:DirectoryBrowserView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodel:CreateBackupSetViewModel}">
            <local:CreateBackupSetView />
        </DataTemplate>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <ContentControl DockPanel.Dock="Bottom" 
                        Content="{Binding Path=CurrentAppViewModel}"/>
    </DockPanel>
</Window>
